<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_inicio">

    <fragment
        android:id="@+id/navigation_inicio"
        android:name="com.example.ev3.ui.inicio.InicioFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_inicio" />

    <fragment
        android:id="@+id/navigation_carga"
        android:name="com.example.ev3.ui.carga.CargaFragment"
        android:label="@string/title_carga"
        tools:layout="@layout/fragment_carga" />

    <fragment
        android:id="@+id/navigation_informacion"
        android:name="com.example.ev3.ui.informacion.InformacionFragment"
        android:label="@string/title_informacion"
        tools:layout="@layout/fragment_informacion" />
    <fragment
        android:id="@+id/navigation_usuario"
        android:name="com.example.ev3.ui.usuario.UsuarioFragment"
        android:label="@string/title_usuario"
        tools:layout="@layout/fragment_usuario" />
</navigation>